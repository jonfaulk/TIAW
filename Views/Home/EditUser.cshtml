@model TIAW.Models.ClienteModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="container">
    <h2 class="cadastro">Edit User</h2>
    <div class="form-container">
        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="FullName">Informe seu nome completo:</label>
                <input type="text" id="FullName" name="FullName" class="form-control" value="@Model.FullName" required>
            </div>

            <div class="form-group">
                <label for="Email">Informe seu email:</label>
                <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" required>
            </div>

            <div class="form-group">
                <label for="Idade">Informe sua idade:</label>
                <input type="number" id="Idade" name="Idade" class="form-control" value="@Model.Idade" min="0" required>
            </div>

            <div class="form-group">
                <label for="Sexo">Selecione seu sexo:</label>
                <select id="Sexo" name="Sexo" class="form-control" required>
                    <option value="escolha" selected=@(Model.Sexo == "escolha" ? "selected" : "")>Escolha</option>
                    <option value="masculino" selected=@(Model.Sexo == "masculino" ? "selected" : "")>Masculino</option>
                    <option value="feminino" selected=@(Model.Sexo == "feminino" ? "selected" : "")>Feminino</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Injury">Você já teve alguma lesão anteriormente?</label>
                <select id="Injury" name="Injury" class="form-control" required>
                    <option value="escolha" selected=@(Model.Injury == "escolha" ? "selected" : "")>Escolha</option>
                    <option value="sim" selected=@(Model.Injury == "sim" ? "selected" : "")>Sim</option>
                    <option value="não" selected=@(Model.Injury == "não" ? "selected" : "")>Não</option>
                </select>
            </div>

            <div class="form-group @(Model.Injury == "sim" ? "" : "d-none")" id="injuryDescription">
                <label for="InjuryDetails">Descreva:</label>
                <textarea id="InjuryDetails" name="InjuryDetails" class="form-control">@Model.InjuryDetails</textarea>
            </div>

            <div class="form-group">
                <label for="Role">Role</label>
                <input type="text" id="Role" name="Role" class="form-control" value="@Model.Role" required />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#Injury').change(function () {
                if ($(this).val() === 'sim') {
                    $('#injuryDescription').removeClass('d-none');
                } else {
                    $('#injuryDescription').addClass('d-none');
                }
            });

            if ($('#Injury').val() === 'sim') {
                $('#injuryDescription').removeClass('d-none');
            } else {
                $('#injuryDescription').addClass('d-none');
            }
        });
    </script>
}