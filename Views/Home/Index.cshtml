@{
    ViewData["Title"] = "Home Page";
}

<section>
    <div class="container">
        <div class="tit">
            <img src="/imagens/gym.jpg" alt="Gym Image">
            <span><h2>ACADEMIA SNATFIT</h2></span>
            <h3 class="frase">O primeiro passo na academia é o começo da sua melhor versão.</h3>
        </div>

        <div class="split">
            <div class="feature">
                <img src="/imagens/treino.jpg" alt="Fitness Class">
                <h2>AQUI SEU CORPO É SEU PALCO. VAMOS JUNTOS!</h2>
                <p>Já possuo cadastro. </p>
                @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn text-white", style = "background-color: orange;" }) 
            </div>
            <div class="feature">
                <img src="/imagens/treino.jpg" alt="Personal Trainer">
                <h2>TRANSFORME SUOR EM CONQUISTAS. VAMOS JUNTOS!</h2>
                <p>Faça o seu cadastro aqui e comece hoje!</p>
                @Html.ActionLink("Cadastre-se", "Cadastro", "Home", null, new { @class = "btn text-white", style = "background-color: orange;" }) 
            </div>
        </div>
    </div>
</section>
