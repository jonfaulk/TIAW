@model List<ClienteModel>

<h1>Administração de Usuários</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Idade</th>
            <th>Sexo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.Clientes)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Idade</td>
                <td>@user.Sexo</td>
                <td>
                    <a asp-controller="Home" asp-action="EditUser">Editar</a>
                    <form asp-controller="Home" asp-action="DeleteUserConfirmed" method="post">
                        <input type="hidden" name="email" value="@user.Email" />
                        <button type="submit" class="btn btn-link">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>